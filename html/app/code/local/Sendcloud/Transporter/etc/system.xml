<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <sendcloud translate="label" module="transporter">
            <label>sendcloud</label>
            <sort_order>100</sort_order>
        </sendcloud>
    </tabs>
    <sections>
        <sendcloud translate="label" module="transporter">
            <label>API Instellingen</label>
            <tab>sendcloud</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <transporter_api translate="label" module="transporter">
                    <label>Instellingen</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

						<enviroment>
							<label>Transporteer naar omgeving</label>
							<frontend_type>select</frontend_type>
							<!-- adding a source model -->
							<source_model>transporter/config_enviroment</source_model>                           
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</enviroment> 
						
						<secret_key translate="label">
                            <label>Secret Key: </label>
                            
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secret_key>
						
						 <api_key translate="label">
                            <label>Public Key: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
						
						
						
                    </fields>
                </transporter_api>
				
				<sendcloud_automate_status translate="label" module="transporter">
					<label>Automatische Bestelling status</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Automatisch bestelling status veranderen: </label>
							<comment>Wanneer er een verzending word doorgestuurd zal de order status automatisch veranderd worden.</comment>
							<frontend_type>select</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</enabled>
					
						<status>
							<label>Bestelling status</label>
							<frontend_type>select</frontend_type>
							<!-- adding a source model -->
							<source_model>transporter/config_statuses</source_model>                           
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</status> 
						
						
						
					</fields>
				</sendcloud_automate_status>
				
				<transporter_automate_transport translate="label" module="transporter">
                    <label>Automatisch transporteren</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

						<enabled translate="label">
							<label>Automatisch bestelling transporteren </label>
							<comment>Transporteer bestelling wanneer deze een bepaalde status heeft.</comment>
							<frontend_type>select</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</enabled>
					
						
						<status>
							<label>Transporteer op bestellingstatus</label>
							<frontend_type>select</frontend_type>
							<!-- adding a source model -->
							<source_model>transporter/config_statuses</source_model>                           
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>                    
						</status> 
						
						
						
                    </fields>
                </transporter_automate_transport>
				
				<transporter_shipped_bulk>
				
					<label>Verzenden bulk actie</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

						<notification translate="label">
							<label>Geef klant notificatie</label>
							<comment>Wanneer je een order op verzend zet, krijgt de klant automatisch een e-mail van Magento</comment>
							<frontend_type>select</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<source_model>adminhtml/system_config_source_yesno</source_model>
						</notification>
					
						
						
						
                    </fields>
					
				</transporter_shipped_bulk>
            </groups>
        </sendcloud>
    </sections>
</config>