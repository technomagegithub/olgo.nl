/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 * 
 * Granada Theme v1.0.0
 */ 
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="btn-group btn-select top-bar-currency top-bar-item">
    <?php  
        $_current_code = $this->getCurrentCurrencyCode();
    ?>
    <a href="#" class="current-option"><?php echo $_current_code ?><span class="caret"></span></a>
    <ul class="dropdown-menu">
        <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
        <li>
            <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" <?php if($_code==$this->getCurrentCurrencyCode()): ?> class="current-option"<?php endif; ?>><?php echo $_name ?></a>
        </li>
    <?php endforeach; ?>
    </ul>
    <script type="text/javascript">
        (function($){
            $('.top-bar-currency > a').click(function(event){
               event.preventDefault();
            });
            $('.top-bar-currency').hover(function(){
               $(this).addClass('open');
            },
            function(){
               $(this).removeClass('open');
            });
        })(jQuery);
    </script>
</div>
<?php endif; ?>
