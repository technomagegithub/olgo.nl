?>

<?php if($this->getItems()->getSize()): ?>
<div class="list-title"><div class="cat-list-name sub-title <?php echo ($this->get_icon_code()?'cat-list-'.$this->get_icon_code():"");?>" style="<?php if($this->get_title_color()){echo 'border-top:2px solid #'.$this->get_title_color();} ?>;<?php if($this->get_title_color()){echo 'color:#'.$this->get_title_color();} ?>;"><?php echo $this->get_cat_title()?></div></div>
