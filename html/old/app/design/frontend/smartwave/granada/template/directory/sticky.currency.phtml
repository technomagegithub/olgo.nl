/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 * 
 * Granada Theme v1.0.0
 */ 
?>
<?php if($this->getCurrencyCount()>1): ?>
<li class="sticky-currency sticky-has-sub">
    <?php  
        $_current_code = $this->getCurrentCurrencyCode();
    ?>
    <a href="#" class="clearfix"><span class="f-left"><?php echo $this->__('Currency') ?></span><span class="dropdown-value active-color"><?php echo $_current_code ?></span></a>
    <ul class="dropdown-menu">
        <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
        <li>
            <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" <?php if($_code==$this->getCurrentCurrencyCode()): ?> class="current-option clearfix"<?php endif; ?>><?php echo $_name ?></a>
        </li>
    <?php endforeach; ?>
    </ul>    
</li>
<?php endif; ?>
