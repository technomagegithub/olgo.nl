<config>
    <modules>
        <Smartwave_Granada>
            <version>1.2.1</version>
        </Smartwave_Granada>
    </modules>
    <admin>
        <routers>
            <granada>
                <use>admin</use>
                <args>
                    <module>Smartwave_Granada</module>
                    <frontName>granada</frontName>
                </args>
            </granada>
        </routers>
    </admin>
    <global>
        <page>
            <layouts>
                <full_width module="page" translate="label">
                    <label>full width layout</label>
                    <template>page/full-width.phtml</template>
                    <layout_handle>full_width</layout_handle>
                </full_width>
            </layouts>
        </page>
        <blocks>
            <granada>
                <class>Smartwave_Granada_Block</class>
            </granada>
        </blocks>
        <helpers>
            <granada>
                <class>Smartwave_Granada_Helper</class>
            </granada>
        </helpers>
        <models>
            <granada>
                <class>Smartwave_Granada_Model</class>
            </granada>
        </models>
        <resources>
            <granada_setup>
                <setup>
                    <module>Smartwave_Granada</module>        
                    <class>Smartwave_Granada_Model_Resource_Design_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </granada_setup>
            <granada_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </granada_write>
            <granada_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </granada_read>
        </resources>
    </global>
    <adminhtml>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <granada>
                        <type>singleton</type>
                        <class>granada/observer</class>
                        <method>granada_controllerActionPostdispatchAdminhtmlSystemConfigSave</method>
                    </granada>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <store_edit>
                <observers>
                    <granada>
                        <type>singleton</type>
                        <class>granada/observer</class>
                        <method>granada_storeEdit</method>
                    </granada>
                </observers>
            </store_edit>
        </events>
        <layout>
            <updates>
                <basket>
                    <file>smartwave_granada.xml</file>
                </basket>
            </updates>
        </layout>
    </adminhtml>
